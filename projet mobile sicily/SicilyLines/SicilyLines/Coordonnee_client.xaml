<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SicilyLines.Coordonnee_client"
             Title="Coordonnee_client">

    <StackLayout HorizontalOptions="Center" Padding="20" Spacing="15">

        <Label x:Name="NomLabel"/>


        <Label x:Name="PrenomLabel"/>



        <Label Text="Code Postal" />
            <Entry x:Name="CodePostalEntry" Placeholder="{Binding cp}"/>

            <Label Text="adresse" />
            <Entry x:Name="VilleEntry" Placeholder="Entrez votre ville" />

            <Label Text="Login" />
            <Entry x:Name="LoginEntry" Placeholder="Nom d'utilisateur" />

            <Label Text="Mot de passe" />
            <Entry x:Name="PasswordEntry" Placeholder="Mot de passe" IsPassword="True" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="20">
            <!--Button Text="Valider" Clicked="OnClickButtonConnexion" /-->
                <!--Button Text="Retour" Clicked="OnRetourClicked" BackgroundColor="LightGray" /-->
            </StackLayout>

        </StackLayout>
</ContentPage>